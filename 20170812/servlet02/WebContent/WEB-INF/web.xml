<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>servlet02</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <!-- 全局上下文参数 所有的(servlet jsp)都能获得到 -->
  <context-param>
  	<param-name>displayCount</param-name>
  	<param-value>10</param-value>
  </context-param>
  
  <servlet>
  	<servlet-name>loginServlet</servlet-name>
  	<servlet-class>com.hellojava.web.servlet.LoginServlet</servlet-class>
  	<!-- Servlet初始化参数(参数只能在当前(LoginServlet)中才能获得 其他的Servlet访问不到)
  	<init-param>
  		<param-name>displayCount</param-name>
  		<param-value>10</param-value>
  	</init-param>
  	配置当前servlet的初始化的时机(数值越小初始化的时机越早)
  	<load-on-startup>1</load-on-startup>
  	 -->
  </servlet>
  <servlet>
  	<servlet-name>loadAll</servlet-name>
  	<servlet-class>com.hellojava.web.servlet.LoadAllServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>saveServlet</servlet-name>
  	<servlet-class>com.hellojava.web.servlet.SaveServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>deleteServlet</servlet-name>
  	<servlet-class>com.hellojava.web.servlet.DeleteServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>loadUpdate</servlet-name>
  	<servlet-class>com.hellojava.web.servlet.LoadUpdate</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>updateServlet</servlet-name>
  	<servlet-class>com.hellojava.web.servlet.UpdateServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>loginServlet</servlet-name>
  	<url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>loadAll</servlet-name>
  	<url-pattern>/loadAll</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>saveServlet</servlet-name>
  	<url-pattern>/saveServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>deleteServlet</servlet-name>
  	<url-pattern>/deleteServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>loadUpdate</servlet-name>
  	<url-pattern>/loadUpdate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>updateServlet</servlet-name>
  	<url-pattern>/updateServlet</url-pattern>
  </servlet-mapping>
  
  
  <filter>
  	<filter-name>checkUserLogin</filter-name>
  	<filter-class>com.hellojava.tools.CheckUserLoginFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>checkUserLogin</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
  	<filter-name>encodingFilter</filter-name>
  	<filter-class>com.hellojava.tools.EncodingFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>encodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>